@model SharedLibrary.Models.CategoryModel;


@{
    ViewData["Title"] = "Create";
}

<hr />
<div class="Container">
    <div class="row">
        <div class="col-6 offset-3 border border-primary rounded">
            <br/>
            <div class="text-center">
                <h1 class="text-info">Add Category</h1>
            </div>
         <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @*<label asp-for="CategoryId"  class="control-label"></label>*@
                    <input asp-for="CategoryId" type="hidden" placeholder="Enter Category Id" class="form-control" />
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
                <br />
            <div class="form-group">
                <label asp-for="CategoryName" class="control-label"></label>
                    <input asp-for="CategoryName" placeholder="Enter Category Name" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
                <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
                <br />
         </form>
        </div>
    </div>
</div>

<div class="text-center">
    <a class="text-primary" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
