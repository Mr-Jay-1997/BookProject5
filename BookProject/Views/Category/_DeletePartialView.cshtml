@model SharedLibrary.Models.CategoryModel;


<!-- Button trigger modal -->
<!-- Modal -->
<div class="modal fade" id="deletePartial-@Model.CategoryId" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            @using (Html.BeginForm("Delete","Category", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.AntiForgeryToken()
            
                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel">  <i class="fas fa-exclamation-triangle" ></i> Are you sure to Delete? </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">
                    <form asp-action="Delete" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            @*<label asp-for="CategoryId"  class="control-label"></label>*@
                            <input asp-for="CategoryId" type="hidden" placeholder="Enter Category Id" value="@Model.CategoryId" class="form-control" />
                            <span asp-validation-for="CategoryId" value="@Model.CategoryId" class="text-danger"></span>
                        </div>

                         <div class="form-group">
                             <input type="text" readonly asp-for="CategoryName" value="@Model.CategoryName" class="form-control" />
                            <span asp-validation-for="CategoryName" value="@Model.CategoryName" class="text-danger"></span>
                         </div>

                        <br />

                        <div class="form-group">
                            <button type="submit" asp-action="Delete" asp-controller="Category" class="btn btn-danger"> <i class="fas fa-trash-alt"> </i> Delete</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        </div>
                    </form>
                </div>
            }
        </div>
    </div>
</div>
